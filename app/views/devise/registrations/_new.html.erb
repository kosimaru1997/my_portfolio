<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {"turbolinks"=>false}, html: { class: "top-form", id: "signup_new_user" }) do |f| %>
<div class="form-group my-3 pt-3 px-3 border">
  <h4 class="border-bottom border-secondary text-center">新規登録</h4>
  <!--</%= render "devise/shared/error_messages", resource: resource %>-->
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "名前", class: 'form-control mt-4' %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'form-control mt-3', id: "signup_user_name" %>

    <!--</% if @minimum_password_length %>-->
    <!--<em>(</%= @minimum_password_length %> characters minimum)</em>-->
    <!--</% end %><br />-->
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: 'form-control mt-3', id: "signup_user_password" %>

    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード再確認", class: 'form-control mt-3' %>

  <div class="actions w-25 my-3 mt-2 ml-auto">
    <%= f.submit "Sign up", class: "btn btn-outline-secondary" %>
  </div>
</div>
  <% end %>
