<div class="row mx-0">
  <!--<div class="col-lg-4">-->


  <!--</div>-->
  <div class="col-lg-10 mx-auto mt-2">
    <div class="d-flex">
      <button type="button" class="btn btn-outline-secondary btn-circle btn-circle-sm m-1 mt-2 mr-2" data-toggle="collapse" data-target="#collapseSearch"
       aria-controls="collapseSearch">
        <i class="fas fa-search fa-lg"></i>
      </button>
      <div class="collapse show my-2" id="collapseSearch">
        <div class="search">
          <%= form_with url: posts_path, :method => 'get', local: true, class: "form-inline" do |f| %>
            <%= f.search_field :search, class: "form-control pr-3 mr-2", placeholder: "検索" %>
            <%= f.submit '検索', name: nil, class: "btn btn-outline-secondary d-none" %>
          <% end %>
        </div>
      </div>
    </div>
    <h4 class="text-center mt-2" style="font-family: Hiragino Maru Gothic Pro">ポスト一覧</h4>
    <ol class="posts scroll-list jscroll" id="post-all">
      <%= render @posts %>
      <%= paginate @posts %>
    </ol>
  </div>
</div>