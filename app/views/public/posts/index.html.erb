<div class="row">
  <div class="col-lg-4 ml-3">

    <button type="button" class="btn btn-outline-secondary pt-1 mt-3 mr-2" data-toggle="collapse" data-target="#collapseSearch"
     aria-controls="collapseSearch">
      <i class="fas fa-search fa-lg"></i>
    </button>
    <button type="button" class="btn btn-outline-secondary pt-1 mt-3" data-toggle="collapse" data-target="#collapsePost"
     aria-controls="collapsePost">
      <i class="fas fa-pencil-alt fa-lg"></i>
    </button>
    <div class="collapse mt-3" id="collapseSearch">
      <div class="search">
        <%= form_with url: posts_path, :method => 'get', local: true, class: "form-inline" do |f| %>
          <%= f.search_field :search, class: "form-control pr-3 mr-2" %>
          <%= f.submit '検索', name: nil, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>

    <div class="collapse  mt-3" id="collapsePost">
      <div crass="post">
        <%= form_with(model: @post, local: true) do |f| %>
          <!--</%= render 'shared/error_messages', object: f.object %>-->
          <div class="field">
            <%= f.text_area :content, :size=>"30x4", placeholder: "ポストを投稿" %>
          </div>
          <%= f.submit "Post", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>

  </div>
  <div class="col-lg-7 mt-3">
    <ol class="posts scroll-list jscroll">
      <%= render @posts %>
      <%= paginate @posts %>
    </ol>
  </div>
</div>