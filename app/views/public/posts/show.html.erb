<div class="row">
  <div class="col-lg-4 ml-5 mt-5">
    <section class="user_info">
      <%= link_to user_path(@post.user) do %>
      <h4>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size:'100x100', class: "rounded-circle"%>
      <%= @user.name %>
      <% end %>
      </h4>
    </section>
  </div>

  <div class="col-lg-7 mt-5">
    <div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
    <div class="post-show border-bottom border-secondary">
      <li><h5 class="content"><%= @post.content %></></li>
      <li><p class="timestamp text-secondary text-right">Posted <%= time_ago_in_words(@post.created_at) %> ago.</p></li>
    </div>
    <div class="about border-bottom border-secondary pb-2 mb-2 mt-2">
      <span id="comments-count"><%= @post.post_comments.count %>件のコメント</span>
      <%= link_to "いいねしたユーザー", favorited_post_path(@post), remote: true, class: "mx-2" %>
      <span id="favorites_<%= @post.id %>">
       <%= render partial: "public/favorites/favorite", locals:{ post: @post} %>
      </span>
     </div>
    <p class="text-center">コメント一覧</p>
     <div class="scroll-list jscroll" id="post-comments">
      <%= render @post_comments %>
      <%= paginate @post_comments %>
    </div>
    <div class="new-comments my-3">
      <%= form_with(model:[@post, @post_comment]) do |f| %>
        <%= f.text_area :comment, :size=>"40x5", placeholder: "コメントする" %>
        <%= f.submit "送信する", class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</div>