<div class="container">
  <div class="row">
    <div class="col-lg-4 ml-5 mt-5">
      <section class="user_info">
        <h4>
        <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg", size:'100x100', class: "rounded-circle"%>
        <%= @user.name %>
        </h4>
      </section>
    </div>

    <div class="col-lg-7 mt-5">
      <div class="post-show border-bottom border-secondary">
        <li><span class="content"><%= @post.content %><span></li>
        <li><span class="timestamp">Posted <%= time_ago_in_words(@post.created_at) %> ago.</span></li>
      </div>
      <div class="comments mt-3">
        <p>コメント件数:<%= @post.post_comments.count %></p>
        <% @post.post_comments.each do |post_comment| %>
          <%= attachment_image_tag @user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg", size:'40x40', class: "rounded-circle"%>
          <%= post_comment.user.name %>
          <%= post_comment.comment %><%= post_comment.created_at.strftime('%Y/%m/%d') %>
          <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
        <% end %>
      </div>
      <div class="new-comments mt-3">
        <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'3',placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
