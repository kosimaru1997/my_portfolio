<li class="border-bottom border-secondary">
  <div class="comment">
    <%= attachment_image_tag post_comment.user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpeg", size:'40x40', class: "rounded-circle"%>
    <span class="user-name mr-3"><%= link_to post_comment.user.name, user_path(post_comment.user) %></span>
    <span><%= post_comment.comment %></span>
  </div>
  <div class="text-right mr-4">
    <span class="mr-2"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
    <% if current_user == post_comment.user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
    <% end %>
  </div>
</li>