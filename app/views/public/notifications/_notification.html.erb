<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="col-md-10 mx-auto  mb-3">
  <div class="form-inline border border-secondary rounded pt-2 px-2">
    <div class="w-100">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= attachment_image_tag visitor, :image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg", size:'40x40', class: "rounded-circle" %>
        <strong><%= visitor.name %></strong>
      <% end %>
      <span>さんが</span>
    </span>

    <% case notification.action %>
      <% when "follow" then %>
        あなたをフォローしました
      <% when "favorite" then %>
        <%= link_to "あなたの投稿", post_path(notification.post), style: "font-weight: bold;" %>
        <span>にいいねしました</span>
      <% when "comment" then %>
        <% if notification.post.user_id == visited.id %>
          <%= link_to "あなたの投稿", post_path(notification.post), style: "font-weight: bold;" %>
        <% else %>
          <span>
          <%= link_to post_path(notification.post) do %>
            <%= attachment_image_tag visited, :image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg", size:'40x40', class: "rounded-circle" %>
            <strong><%= notification.post.user.name %></strong><% end %>さんの投稿
          </span>
        <% end %>
          <% if notification.post_comment.parent_id.nil? %>
            <span>にリプライしました</span>
          <% else %>
            <span>にコメントしました</span>
          <% end %>
         <div><p class="text-muted ml-3 mb-0"><%= notification.post_comment.comment %></p></div>
    <% end %>
          </div>
      <div class="ml-auto d-flex" style="height: 25px">
        <%= link_to "削除", notification_path(notification.id), method: :delete, class: "mr-3 text-danger" %>
        <p class="small text-muted mt-1"><%= time_ago_in_words(notification.created_at).upcase %></p>
      </div>
  </div>
</div>