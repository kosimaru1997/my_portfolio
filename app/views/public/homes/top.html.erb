<div class="top-page">
  <div class="row  my-3">
    <% if user_signed_in? %>
      <div class="col-lg-4 mb-5">

      </div>
      <div class="col-lg-8">
        <h3 class="text-center" style="font-family: Hiragino Maru Gothic Pro">ホーム</h3>
        <div class="post-form border-bottom py-4">
          <div crass="user_info", style="margin-bottom: 20px;" >
            <%= link_to user_path(current_user) do %>
              <%= attachment_image_tag current_user, :image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg", size:'60x60', class: "rounded-circle" %>
              <%= current_user.name %>
            <% end %>
          </div>
          <div crass="post mt-4">
            <%= form_with(model: @post) do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="field">
                <%= f.text_area :content, :size=>"30x5", class: "form-control w-100", placeholder: "ポストを投稿" %>
              </div>
              <%= f.submit "Post", class: "btn btn-cool-blues btn-rounded d-block ml-auto mt-3" %>
            <% end %>
          </div>
        </div>
        <ol class="posts scroll-list jscroll" id="post-all">
          <%= render @posts %>
          <%= paginate @posts %>
        </ol>
      </div>

    <% else %>
      <%= render "not_loged_in_top" %>
    <% end %>
  </div>
</div>
