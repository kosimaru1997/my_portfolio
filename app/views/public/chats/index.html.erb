<div class="row">
  <% @rooms.each do |room| %>
    <div class="col-8 mx-auto mt-3 border border-secondary rounded pt-2 px-2">
      <div class="user border-bottom border-secondary">
      <%= link_to user_path(room.user) do %>
        <%= attachment_image_tag room.user, :image, :fill, 35, 35, format: 'jpg', fallback: "no_image.jpg", size:'35x35', class: "rounded-circle" %>
      <% end %>
        <%= room.user.name %>
      </div>
      <%= link_to user_chats_path(room.user), class: "text-decoration-none" do %>
        <% if room.chats != [] %>
          <p class="pt-3 ml-3 mb-0 text-dark"><%= room.chats.last.message %></p>
          <div class="small text-muted text-right">
            <span>
              <% if room.caht_for_notice.last.checked == false %>
                <i class="fa fa-circle fa-x" style="color: blue;"></i>
              <% end %>
            </span>
            <%= (room.chats.last).created_at.strftime("%Y/%m/%d %H:%M") %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>