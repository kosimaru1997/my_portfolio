  <% @rooms.each do |room| %>
    <tr>
      <p><%= link_to user_chats_path(room.user) do %>
      <%= attachment_image_tag room.user, :image, :fill, 40, 40, format: 'jpg', fallback: "no_image.jpg", size:'40x40', class: "rounded-circle" %>
      <%= room.user.name %>
      <% end %></p>
      <% if room.chats != [] %>
      <%= room.chats.last.message %><br>
      <%= (room.chats.last).created_at.strftime("%Y/%m/%d %H:%M") %>
      <% end %>
    </tr>
  <% end %>